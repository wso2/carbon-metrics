<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>wso2carbon-metrics-${project.version}</baseDirectory>
    <id>carbon-metrics</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>target/wso2carbon-kernel-${carbon.kernel.version}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>README.txt</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>release-notes.html</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>./osgi/dropins</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useStrictFiltering>true</useStrictFiltering>
            <includes>
                <include>org.wso2.carbon.metrics:org.wso2.carbon.metrics.sample.service</include>
                <include>org.wso2.carbon.metrics:org.wso2.carbon.metrics.sample.consumer</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>